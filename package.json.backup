{
  "name": "my-board-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "cross-env NODE_OPTIONS=--max_old_space_size=2048 jest --maxWorkers=1",
    "test:watch": "cross-env NODE_OPTIONS=--max_old_space_size=2048 jest --watch --maxWorkers=1",
    "test:coverage": "cross-env NODE_OPTIONS=--max_old_space_size=2048 jest --coverage --maxWorkers=1",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --headed --debug",
    "test:e2e:chrome": "playwright test --headed --project=chromium",
    "test:e2e:firefox": "playwright test --headed --project=firefox",
    "test:e2e:safari": "playwright test --headed --project=webkit",
    "test:e2e:report": "playwright test --reporter=html",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "jest --ci --coverage --watchAll=false && playwright test --reporter=line",
    "playwright:install": "playwright install",
    "analyze": "cross-env ANALYZE=true npm run build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser npm run build",
    "test:email:env": "node scripts/check-env.js",
    "test:email:smtp": "node scripts/test-smtp-connection.js",
    "test:email:send": "node scripts/test-email-send.js",
    "test:email:security": "node scripts/test-security.js",
    "test:email:templates": "node scripts/test-email-templates-advanced.js",
    "test:email:hosts": "node scripts/test-smtp-hosts.js",
    "test:email:all": "npm run test:email:env && npm run test:email:smtp && npm run test:email:send && npm run test:email:templates && npm run test:email:security",
    "email:preview": "echo 'Visit http://localhost:3000/api/email-preview?template=welcome&userName=TestUser to preview emails'",
    "test:react-email": "node scripts/test-react-email.js",
    "test:email:comprehensive": "tsx scripts/test-email-comprehensive.js",
    "test:email:stress": "node scripts/test-email-stress.js",
    "test:email:logging": "node scripts/test-email-logging.js",
    "test:email:preview": "node scripts/test-email-preview.js",
    "test:email:master": "node scripts/test-email-master.js",
    "test:email:master:verbose": "node scripts/test-email-master.js --verbose",
    "test:email:master:fast": "node scripts/test-email-master.js --fast"
  },
  "dependencies": {
    "@auth/mongodb-adapter": "^3.10.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/material": "^7.2.0",
    "@react-email/components": "^0.5.0",
    "@react-email/render": "^1.2.0",
    "bcryptjs": "^3.0.2",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "isomorphic-dompurify": "^2.26.0",
    "lru-cache": "^11.1.0",
    "mongoose": "^8.17.0",
    "next": "15.4.4",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.9.17",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-email": "^4.2.8",
    "react-hook-form": "^7.62.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.4.6",
    "@playwright/test": "^1.54.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/dompurify": "^3.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.4",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "mongodb-memory-server": "^10.2.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5"
  }
}
